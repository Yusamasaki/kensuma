<% provide(:title,  "車両一覧") %>

<%= link_to "車両新規作成画面へ", new_users_car_path, class: "btn btn-lg btn-block btn-outline-primary" %>
<br>
<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <thead>
        <tr align="center">
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @cars.each do |car| %>
        <tr align="center">
          <td><%= link_to car.owner_name, users_car_path(car) %></td>
          <td><%= link_to "編集", edit_users_car_path(car), class: "btn btn-md btn-success" %></td>
          <td><%= link_to "削除", users_car_path(car), method: :delete, data: { confirm: "「#{car.owner_name}」を削除します。本当によろしいですか？" }, class: "btn btn-md btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>