<% provide(:title, "車両情報編集") %>
<% provide(:btn_text, "更新") %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @car, url: users_car_path, method: :patch, local: true do |f| %>
      <%= render partial: "form", locals: { f: f, car: @car } %>

      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-success" %>
      <%= link_to "詳細画面へ", users_car_path(@car), class: "btn btn-md btn-block btn-default" %>
      <%= link_to "一覧画面へ", users_cars_path, class: "btn btn-md btn-block btn-default" %>
    <% end %>
  </div>
</div>
